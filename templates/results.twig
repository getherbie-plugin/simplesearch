{% if submitted %}
    <div class="plugin-simplesearch-results">
        {% if query == false %}
            <p>Bitte geben Sie einen Suchbegriff ein.</p>
        {% elseif results|length == 0 %}
            <p>Keine Ergebnisse fÃ¼r '{{ query }}' gefunden.</p>
        {% else %}
            <p>{{ results|length }} Ergebnisse gefunden.</p>
            {% for result in results %}
                <div class="result">
                    <div class="title">{{ link(result.route, result.title) }}</div>
                    <div class="url">{{ url(result.route) }}</div>
                    {% if result.date %}
                        <div class="date">{{ result.date|strftime('%e. %B %Y') }}</div>
                    {% endif %}
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endif %}
